<div class="jumbotron">
    <h1 class="display-4">EAT DA BURGER!</h1>
    <hr class="my-4">
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="newBurger" name="name">
            <button class="btn btn-primary" type="submit">Add Burger</button>
        </div>

    </form>
    <div class="row">

        <div class="col-md-4">
            <h2>Let's eat da burgers</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger/burgers devoured=false}}

                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-4">
            <img src="assets/img/burger.jpeg" alt="a picture of a burger">
        </div>

        <div class="col-md-4">
            <h2>Tasty !!!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger/burgers-devoured devoured=true}}
                {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>