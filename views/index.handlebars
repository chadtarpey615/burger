
<div class="jumbotron">
    <hr class="my-4">
    <h1 class="display-4 animate__animated animate__bounce">EAT DA BURGER!</h1>

    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="newBurger" name="name">
            <button class="btn btn-info" type="submit">Add Burger</button>
        </div>

    </form>
    <div class="row">

        <div class="col-md-4">
            <h2 class="animate__animated animate__bounce">Let's eat da burgers</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger/burgers devoured=true}}

                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-md-4">
            <img src="assets/img/burgers.jpeg" height="500px" alt="a picture of a burger">
        </div>

        <div class="col-md-4">
            <h2>Tasty !!!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger/burgers-devoured devoured=false}}
                {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>